@model List<Person>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="Create">Add a person</a>

<table>
    <thead>
        <td>Name</td>
        <td>City</td>
        <td>PhoneNumber</td>
    </thead>
    <tbody>
        @foreach (Person person in Model){
            <tr>
                <td>@person.Name</td>
                <td>@person.City</td>
                <td>@person.PhoneNumber</td>
                <td>@Html.ActionLink("Details", "Details", "Person", new {id = person.Id})</td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-3">Namn</div>
    <div class="col-3">City</div>
    <div class="col-3">Phone number</div>
</div>
